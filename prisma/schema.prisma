generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Importance {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}

enum HabitFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum HabitType {
  YES_NO
  COUNTER
}

model Habit {
  id     String @id @default(cuid())
  userId String

  title       String
  description String?

  type      HabitType      @default(YES_NO)
  frequency HabitFrequency @default(DAILY)

  daysOfWeek Int[] @default([])

  targetPerPeriod Int?

  color      String?
  icon       String?
  importance Importance? @default(MEDIUM)
  isArchived Boolean     @default(false)

  logs HabitLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model HabitLog {
  id      String @id @default(cuid())
  habitId String
  userId  String

  // The "day" or period this log represents
  date  DateTime
  value Int? // how many times / units done
  done  Boolean  @default(false)
  note  String?

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // One log per habit per date
  @@unique([habitId, date])
  @@index([userId, date])
}

model Notebook {
  id     String @id @default(cuid())
  userId String

  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notes Note[]
}

model Note {
  id     String @id @default(cuid())
  userId String

  notebookId String?
  notebook   Notebook? @relation(fields: [notebookId], references: [id])

  title      String
  content    String?
  importance Importance @default(MEDIUM)
  pinned     Boolean    @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ToDo {
  id         String     @id @default(cuid())
  userId     String
  title      String
  status     Status     @default(TODO)
  importance Importance @default(MEDIUM)
  dueAt      DateTime?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([userId, status, dueAt])
}

model Planning {
  id          String     @id @default(cuid())
  userId      String
  title       String
  description String?
  startsAt    DateTime
  endsAt      DateTime?
  importance  Importance @default(MEDIUM)

  completed    Boolean @default(false)
  sourceTodoId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, startsAt])
}
